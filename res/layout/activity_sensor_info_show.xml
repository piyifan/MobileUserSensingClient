<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_sensor_last_collected_data"
        tools:context=".SensorInfoShowActivity" />

    <ListView
        android:id="@+id/sensor_info_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    </ListView>

    <Button
        android:id="@+id/button_collect_and_send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_collect_and_send"
        android:onClick="collectAndSend" />
    
</LinearLayout>
